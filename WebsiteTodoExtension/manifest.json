{
  "manifest_version": 3,
  "name": "To-Visit List",
  "version": "2.0",
  "description": "Save websites to visit later. Clean, smart, distraction-free.",
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "To-Visit List"
  },
  "permissions": [
    "activeTab",
    "storage",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "save-current-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Save current tab to To-Visit List"
    }
  }
}